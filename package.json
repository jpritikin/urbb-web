{
  "name": "urbb-web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run watch:ts\" \"npm run watch:css\" \"hugo server -D\"",
    "watch:ts": "tsc --watch",
    "watch:css": "postcss ./static/css/input.css -o ./static/css/output.css --watch",
    "build:ts": "tsc",
    "build:css": "NODE_ENV=production postcss ./static/css/input.css -o ./static/css/output.css",
    "build": "npm run build:ts && npm run build:css && hugo --minify",
    "start": "hugo server"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-nesting": "^13.0.2",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.7.3"
  }
}
